# Copy this file to .env.local and fill the values. Never commit .env.local to Git.
# For Vercel: add these same variables in Project Settings → Environment Variables.

# MongoDB (required)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/AURA?retryWrites=true&w=majority

# JWT (required in production: use a long random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT expiration (optional, default 30d). Examples: 7d, 30d, 90d
# JWT_EXPIRES_IN=30d

# Next.js (optional; in Vercel the app and API share the same URL)
NEXT_PUBLIC_API_URL=http://localhost:3000

# AWS S3 – required only if you use software downloads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-bucket-name
